generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
}

model User {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  email           String?          @unique
  image           String?
  isSuspend       Boolean          @default(false)
  tackingDetails  TackingDetails[]
  role            UserRole         @default(user)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @default(now()) @updatedAt @map("updated_at")
}

model TackingDetails {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  user        User?            @relation(fields: [userId], references: [id])
  userId      String?          @db.ObjectId
  email       String 
  logs        Log[]            // Required but can be empty
  token       String           @unique
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @default(now()) @updatedAt @map("updated_at")
}

model Log {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  trackingDetailsId String          @db.ObjectId @unique
  time              String
  ipv4              String
  country           String
  browser           String
  os                String

  // Relations
  trackingDetails TackingDetails  @relation(fields: [trackingDetailsId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
